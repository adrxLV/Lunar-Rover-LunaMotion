{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "MIMode": "gdb",
            "args": ["--log_severity", "trace"],
            "stopAtEntry": false,
            "stopAtConnect": true,
            //"visualizerFile": "${workspaceFolder}/NatvisFile.natvis",
            //"showDisplayString": true,
            // The current working directory, on the target
            "cwd": "../../",
            "environment": [
                {
                    // add the directory where our target was built to the PATHs
                    // it gets resolved by CMake Tools:
                    "name": "PATH",
                    "value": "$PATH:${command:cmake.launchTargetDirectory}"
                }//,
                //{
                //    "name": "PYTHONPATH",
                //    "value": "/home:$PYTHONPATH"
                //}
            ],
            "externalConsole": false,
            "setupCommands": [
                // either enable loading of .gdbinit file from here
                // or place the .gdbinit file in ${command:cmake.launchTargetDirectory} (build/dev) for autoloading by gdb
                //{
                //    "description": "Load local project pretty-printers.py",
                //    "text": "source ${workspaceFolder}/pretty-printers.py",
                //    "ignoreFailures": false
                //},
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}